<form class="admin">
    <header>
        <h1>Git Update</h1>
        <label for="update-interval">Update every: </label>
        <select name="update-interval">
            <option value="request">Request</option>
            <option value="hour">Hour</option>
            <option value="day">Day</option>
            <option value="week">Week</option>
        </select>
        <button type="submit" class="btn btn-primary">Save</button>
    </header>
    <table class="plugins">
        <thead>
        <th class="enable">Enable</th>
        <th>Plugin</th>
        <th class="repository">Repository</th>
        <th></th>
        <th>Last Updated</th>
        <th>Actions</th>
        </thead>
        {{#plugins}}
            <tr class="plugin">
                <td class="enable">
                    <input type="checkbox" name="{{name}}[enable]" {{enable}}>
                </td>
                <td>
                    <label class="name">
                        {{name}}
                    </label>
                </td>
                <td class="repository">
                    <input class="repository" name="{{name}}[repository]" placeholder="repository"
                           value="{{repository}}">
                </td>
                <td>
                    <select name="{{name}}[branch]" class="branch">
                        {{#branches}}
                            <option value="{{.}}">{{.}}</option>
                        {{/branches}}
                    </select>
                </td>
                <td>
                    <label class="last-updated">
                        {{lastUpdated}}
                    </label>
                </td>
                <td>
                    <div class="actions">

                    </div>
                </td>

            </tr>
        {{/plugins}}
    </table>
</form>